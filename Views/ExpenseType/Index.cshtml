
@model IEnumerable<BuyAndCount.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Тип покупки (необходимость)</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Добавить тип</a>
        </div>
    </div>
    <br />
</div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Покупки
                    </th>                                       
                </tr>
            </thead>
            <tbody>
                @foreach (var expType in Model)
                {
                <tr>
                    <td width="50%">@expType.Name</td>
                    <td width="50%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expType.Id" class="btn btn-primary mx-1">Изменить</a>
                            <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expType.Id" class="btn btn-danger mx-1">Удалить</a>
                        </div>
                    </td>
                </tr>
                }
             </tbody>
        </table>
     }
else
{
    <p> Добавьте новые типы </p>
}       

